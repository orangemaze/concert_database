<p id="notice"><%= notice %></p>

<h1>Listing Albums</h1>

<%= link_to 'New Album', new_album_path %>

<table class="table table-striped table-bordered table-hover dataTables">
  <thead>
    <tr>
      <th>Album id</th>
      <th>Album name</th>
      <th>Album review</th>
      <th>Album amazon ad</th>
      <th>Album release year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.order('release_year').each do |album| %>
      <tr>
        <td><%= album.id %></td>
        <td><%= album.album_name %></td>
        <td><%= album.album_review %></td>
        <td><%= album.album_amazon_ad.html_safe %></td>
        <td><%= album.release_year %></td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

