%div{:id => "page-wrapper"}
  %br
  %div.row
    %div.col-lg-3.col-md-6
      %div.panel.panel-primary
        %div.panel-heading
          %div.row
            %div.col-xs-3
              %i.fa.fa-calendar.fa-5x
            %div.col-xs-9.text-right
              %h4= t('concert')
              %div
