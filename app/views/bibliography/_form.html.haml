= form_for(:bibliography, :url => url_for(:controller => 'bibliography', :action => 'create'), :html => { :class => 'form-inline'}) do |f|

  = if @bibliography.errors.any?
    %div#error_explanation
      %h2
        = "#{pluralize(@bibliography.errors.count, 'error')} prohibited this appointment from being saved"

      %ul
        = @bibliography.errors.full_messages.each do |msg|
          %li= msg


  %div.form-group
    %div.form-group
      = f.label :title, :class => 'sr-only'
      = f.text_area :title, :class => 'form-control', :value => :title, :size =>  "30x10"

    %div.form-group
      = f.label :bibliography_text, :class => 'sr-only'
      = f.text_area :bibliography_text, :class => 'form-control', :size => "30x10", :value => "<b>Title</b>     by Author<br>    Published by: <i>publisher</i><br>    ISBN: <i>isbn</i><br>"

    %div.form-group
      = f.label :amazon_ad, :class => 'sr-only'
      = f.text_area :amazon_ad, :class => 'form-control', :value => '', :size => "30x10"



    %div.actions
      = f.submit 'submit', :tabindex => '20'
