%div.row
  %div.col-md-4.col-md-offset-4
    %div.login-panel.panel.panel-default
      %div.panel-heading
        %h3.panel-title Please Sign In
      %div.panel-body
        %form{:role =>"form"}
          %fieldset
            %div.form-group
              %input.form-control{:placeholder => "User Name", :name => "user name", :id => 'username', :type => "text", :autofocus => 'autofocus'}
            %div.form-group
              %input.form-control{:placeholder => "Password", :name => "password", :id => "password", :type => "password",  :value => ""}
            %div.checkbox
              %label
                %input{:name => "remember", :id => 'remember_me', :type => "checkbox", :value => "Remember Me"} Remember Me
                %input{:name => "from_what_page", :id => "from_what_page", :type => "hidden", :value => URI(request.referer).path}
            %div.form-group
              %input.btn.btn-primary#login{:style => "clear: left; width: 100%; height: 32px; font-size: 13px;", :type => "button", :name => "commit", :value => "Sign In"}
